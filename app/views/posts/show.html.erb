<br>
<div class="container">
  <h2 class="text-center"><%= @post.title %> - <%= @post.event_date %></h2>
  <div>
    <div class="row">
      <div class="col-xs-12 col-md-6 flex justify-center">
        <%= image_tag(@post.photo, class: "width100") %>
      </div>

      <div class="col-xs-12 col-md-6 flex justify-center">
        <div id="map"
         style="width: 80%; height: 400px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>

  <p><%= @post.content %></p>
</div>

