<div class="col-xs-12 col-md-4">
  <div class="card-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= post.photo %>);">
    <% if !current_user.nil? %>
        <% if post.user_id == current_user.id %>
          <div class="icons">
            <%= link_to raw('<i class="fas fa-edit"></i>'), edit_post_path(post), class: "icon-color" %>
            <i id="delete-event-icon" class="fas fa-times-circle icon-color"></i>
            <%= link_to "", post_path(post),
                        method: :delete, id: "delete-event-link", class: "hidden" %>
          </div>
        <% end %>
      <% end %>
    <%= link_to("", post_path(post), class:"card-link")  %>
    <div>

    <h2 class="text-center"><%= post.title %></h2>
    <h3 class="text-center">  <%= post.event_date %></h3>
    </div>
  </div>
</div>


