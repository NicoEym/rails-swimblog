<div class="card col-xs-12 col-md-12">
  <%= link_to("", post_path(post), class:"card-link")  %>
  <div class="card-image card-img-top">
    <%= image_tag(post.photo, class:"" ) %>
    <h5 class="card-title"><%= post.title %> <%= post.event_date %></h5>
    <p class="card-text"><%= post.content %></p>
  </div>
</div>

