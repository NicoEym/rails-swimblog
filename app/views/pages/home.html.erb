<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dzxrdf9za/image/upload/v1593218718/ghazcvekq7jl13ihwfxl.png);">
  <div class='container-home'>
    <h1>Nico Swimblog</h1>
    <p>Swimming around the world.</p>
    <div class='button-box'>
      <h2 class="btn btn-outline" id='button_scroll'>Find out</h2>
    </div>
  </div>
</div>


<div class="container hidden-style" >
  <div id='map-page' class="orange padding1 margin1 shadow-boxing border-radius05">
    <div class="row justify-center">
      <h2>All the races:</h2>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-12 flex justify-center">
        <div id="map"
           style="width: 80%; height: 400px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
<br>
  <% unless @posts.empty? %>
  <div id="card-container" class="padding1 margin1 shadow-boxing border-radius05">
    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">

        <div class="carousel-item active" data-interval="5000">
          <div class="space_around" >
          <% @first_3_posts.each do |post| %>
            <%= render 'shared/cardpost', post: post %>
          <% end %>
          </div>
        </div>

        <% @other_posts.each do |array_of_post| %>
          <div class="carousel-item" data-interval="5000">
            <div class="space_around" >
              <% array_of_post.each do |post| %>
                <%= render 'shared/cardpost', post: post %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <% end %>
</div>
