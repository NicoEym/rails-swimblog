<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dzxrdf9za/image/upload/v1593218718/ghazcvekq7jl13ihwfxl.png);">
  <div class='container-home'>
    <h1>Nico swim blog</h1>
    <p>Swimming around the world.</p>
    <div class='button-box'>
      <%= link_to("Find out", "#", class:"btn btn-outline")  %>
    </div>
  </div>
</div>

<br>
  <div class="container">
     <div class="row justify-center">
        <h2>All the races:</h2>
      </div>
    <div class="col-xs-12 col-md-12">
      <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
<br>
    <div class="container">
      <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @posts.each do |post| %>
            <div class="carousel-item active" data-interval="1000">
              <%= render 'shared/cardpost', post: post %>
            </div>
          <% end %>
        </div>
      <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </div>
<br>

